{% extends 'base.html.twig' %}
{% block controller %}CourseController{% endblock %}
{% block main %}
    <style>
        textarea {
            width: 100%;
            height: 90%;
        }
    </style>
    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('home_page') }}">Home</a></li>
                        <li class="active">Course</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container">

        <div class="row">
            <div class="col-md-9">
                <div class="blog-posts">
                    {% for course in pagination %}
                        <article class="post post-medium">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="post-image">
                                        <div class="img-thumbnail">
                                            <img class="img-responsive" src="{{ course.imagePath }}" alt="post image">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="post-content">
                                        <h2><a href="{{ path('course_detail', {'hash' : course.hashTag, 'username' : course.author.username}) }}">{{ course.title }}</a></h2>
                                        <p>{{ course.introduce | first_para }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="post-meta">
                                        <span><i class="fa fa-calendar"></i>{{ course.createdAt | date("m/d/Y") }}</span>
                                        <span><i class="fa fa-user"></i> By <a href="#">{{ course.author.username }}</a> </span>
                                        <span><i class="fa fa-tag"></i>
                                            {% for t in course.courseTags %}
                                                <a href="#">{{ t.tag.text }}</a>
                                            {% endfor %}
                                        </span>
                                        <span><i class="fa fa-book"></i> <a href="#">{{ course.chapters | length }} Chapters</a></span>
                                        <a href="{{ path('course_detail', {'hash' : course.hashTag, 'username' : course.author.username}) }}" class="btn btn-xs btn-primary pull-right">Read more...</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                    <ul class="pagination pagination-lg pull-right">
                        {{ knp_pagination_render(pagination) }}
                    </ul>

                </div>
            </div>

            <div class="col-md-3">
                <aside class="sidebar">

                    <h4>Categories</h4>
                    <ul class="nav nav-list primary push-bottom">
                        <li><a href="#">Design</a></li>
