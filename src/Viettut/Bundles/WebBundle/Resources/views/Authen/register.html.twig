{% extends 'base.html.twig' %}

{% block controller %}RegisterController{% endblock %}
{% block main %}
    <div class="container">
        <div style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign Up</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px">
                        <a ng-click="login()" href="javascript:;">Sign In</a>
                    </div>
                </div>
                <div class="panel-body" >
                    <form class="form-horizontal" role="form">

                        <div ng-show="showError" class="alert alert-danger">
                            <p>Error:</p>
                            <span><{ error }></span>
                        </div>

                        <div class="form-group">
                            <label for="email" class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                <input type="email" class="form-control" name="email" placeholder="Email Address" required ng-model="email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name" class="col-md-3 control-label">Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="name" placeholder="Name" ng-model="name">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Username</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="username" placeholder="Username" required ng-model="username">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" placeholder="Password" required ng-model="password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Retype Password</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password_retype" placeholder="Password" required ng-model="password_retype">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9"><button ladda-button="laddaLoading" data-style="slide-right" ng-click="signup()" class="ladda-button btn-primary" style="border-radius: 5px;">&nbsp Sign Up  </button>
                                {#<button type="button" class="btn btn-info" ng-click="signup()"><i class="icon-hand-right"></i> &nbsp Sign Up</button>#}
                                <span style="margin-left:8px;">or</span>
                            </div>
                        </div>

                        <div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" class="btn btn-primary"><i class="icon-facebook"></i> Â  Sign Up with Facebook</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


